<% include ./partials/header.ejs %>
   
    <div class='container'>
        <div class='row'>
            <div style='width: 30%; margin: 20px auto;'>
                <h1>Login into Shoppie</h1>
                <form action='/register' method='POST'>
                    <div class='form-group'>
                        <input class='form-control' type='text' name='username' placeholder='Username or Email'>
                    </div>
                    <div class='form-group'>
                        <input class='form-control' type='password' name='password' placeholder='password'>
                    </div>
                    <div class='form-group'>
                        <button class='btn btn-primary btn-lg btn-block'>Log In</button>
                    </div>
                    <p class='hr-text'>side lines via flex</p>
                    <div class='form-group'>
                        <button class='btn btn-success btn-lg btn-block'>Create New Account</button>
                    </div>
                    <a>Forgot account?</a>
                </form>
            </div>
        </div>
    </div>
    
